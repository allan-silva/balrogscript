{
  "work_dir": "/app/workdir",
  "artifact_dir": "/app/artifacts",
  "verbose": true,
  "dummy": false,
  "disable_certs": false,
  "taskcluster_scope_prefix": {
    "$if": "COT_PRODUCT == 'thunderbird'",
    "then": "project:comm:thunderbird:releng:balrog:",
    "else": "project:releng:balrog:"
  },
  "server_config": {
    "$let": {
      "api_root": {
        "$if": "ENV == 'prod'",
        "then": "https://aus4-admin.mozilla.org/api",
        "else": "https://admin-stage.balrog.nonprod.cloudops.mozgcp.net/api"
      },
      "auth0_audience": {
        "$if": "COT_PRODUCT == 'thunderbird'",
        "then": {
          "$if": "ENV == 'prod'",
          "then": "balrog-production",
          "else": "balrog-stage"
        },
        "else": {
          "$if": "ENV == 'prod'",
          "then": "balrog-production",
          "else": "balrog-cloudops-stage"
        }
      }
    },
    "in": {
      "nightly": {
        "api_root": {
          "$eval": "api_root"
        },
        "auth0_domain": "auth.mozilla.auth0.com",
        "auth0_client_id": {
          "$eval": "AUTH0_CLIENT_ID"
        },
        "auth0_client_secret": {
          "$eval": "AUTH0_CLIENT_SECRET"
        },
        "auth0_audience": {
          "$eval": "auth0_audience"
        },
        "allowed_channels": [
          "nightly"
        ]
      },
      "aurora": {
        "api_root": {
          "$eval": "api_root"
        },
        "auth0_domain": "auth.mozilla.auth0.com",
        "auth0_client_id": {
          "$eval": "AUTH0_CLIENT_ID"
        },
        "auth0_client_secret": {
          "$eval": "AUTH0_CLIENT_SECRET"
        },
        "auth0_audience": {
          "$eval": "auth0_audience"
        },
        "allowed_channels": [
          "aurora"
        ]
      },
      "beta": {
        "api_root": {
          "$eval": "api_root"
        },
        "auth0_domain": "auth.mozilla.auth0.com",
        "auth0_client_id": {
          "$eval": "AUTH0_CLIENT_ID"
        },
        "auth0_client_secret": {
          "$eval": "AUTH0_CLIENT_SECRET"
        },
        "auth0_audience": {
          "$eval": "auth0_audience"
        },
        "allowed_channels": [
          "beta",
          "beta-localtest",
          "beta-cdntest"
        ]
      },
      "release": {
        "api_root": {
          "$eval": "api_root"
        },
        "auth0_domain": "auth.mozilla.auth0.com",
        "auth0_client_id": {
          "$eval": "AUTH0_CLIENT_ID"
        },
        "auth0_client_secret": {
          "$eval": "AUTH0_CLIENT_SECRET"
        },
        "auth0_audience": {
          "$eval": "auth0_audience"
        },
        "allowed_channels": [
          "release",
          "release-localtest",
          "release-cdntest"
        ]
      },
      "esr": {
        "api_root": {
          "$eval": "api_root"
        },
        "auth0_domain": "auth.mozilla.auth0.com",
        "auth0_client_id": {
          "$eval": "AUTH0_CLIENT_ID"
        },
        "auth0_client_secret": {
          "$eval": "AUTH0_CLIENT_SECRET"
        },
        "auth0_audience": {
          "$eval": "auth0_audience"
        },
        "allowed_channels": [
          "esr",
          "esr-localtest",
          "esr-cdntest"
        ]
      },
      "dep": {
        "api_root": {
          "$eval": "api_root"
        },
        "auth0_domain": "auth.mozilla.auth0.com",
        "auth0_client_id": {
          "$eval": "AUTH0_CLIENT_ID"
        },
        "auth0_client_secret": {
          "$eval": "AUTH0_CLIENT_SECRET"
        },
        "auth0_audience": {
          "$eval": "auth0_audience"
        },
        "allowed_channels": [
          "nightly",
          "aurora",
          "beta",
          "beta-localtest",
          "beta-cdntest",
          "release",
          "release-localtest",
          "release-cdntest",
          "esr",
          "esr-localtest",
          "esr-cdntest"
        ]
      }
    }
  }
}
